<% content_for :title, "Perfil do Colaborador" %>
<div class="pt-0 lg:pt-10 flex flex-col items-center w-full min-h-screen py-10">
  <div class="w-full max-w-lg bg-white rounded-2xl shadow-md p-8">
    <div class="flex flex-col items-center mb-6">
      <h1 class="text-2xl font-bold text-gray-800 mb-1">
        <%= @employee.nome %>
      </h1>
      <span
        class="inline-block px-3 py-1 rounded bg-gray-100 text-gray-600 text-xs font-medium mt-1"
      >
        <%= @employee.cargo %> - <%= @employee.area %>
      </span>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2 mb-6">
      <div>
        <span class="font-semibold text-gray-700">Email:</span>
        <div class="text-gray-600 text-sm"><%= @employee.email %></div>
      </div>
      <div>
        <span class="font-semibold text-gray-700">Email corporativo:</span>
        <div class="text-gray-600 text-sm">
          <%= @employee.email_corporativo %>
        </div>
      </div>
      <div>
        <span class="font-semibold text-gray-700">Localidade:</span>
        <div class="text-gray-600 text-sm"><%= @employee.localidade %></div>
      </div>
      <div>
        <span class="font-semibold text-gray-700">Tempo de empresa:</span>
        <div class="text-gray-600 text-sm">
          <%= @employee.tempo_de_empresa %>
        </div>
      </div>
      <div>
        <span class="font-semibold text-gray-700">Geração:</span>
        <div class="text-gray-600 text-sm"><%= @employee.geracao %></div>
      </div>
      <div>
        <span class="font-semibold text-gray-700"
          >Estrutura organizacional:</span
        >
        <div class="text-gray-600 text-xs">
          <%= [@employee.n0_empresa, @employee.n1_diretoria,
          @employee.n2_gerencia, @employee.n3_coordenacao,
          @employee.n4_area].compact.join(" / ") %>
        </div>
      </div>
    </div>
    <% latest_response = @employee.survey_responses.order(data_da_resposta:
    :desc).first %> 
    <% if latest_response %>
    <div class="mb-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">
        Avaliações por Categoria
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-2">
        <% latest_response.scores.each do |label, value| %>
        <div>
          <span class="font-semibold text-gray-700"
            ><%= label.to_s.humanize %>:</span
          >
          <div class="text-gray-600 text-sm"><%= value %>/10</div>
        </div>
        <% end %>
      </div>
    </div>
    <div class="mb-6">
      <h2 class="text-lg font-semibold text-gray-700 mb-2">Comparativos</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-x-8 gap-y-2">
        <div>
          <span class="font-semibold text-gray-700">Colaborador:</span>
          <div class="text-gray-600 text-sm">
            <%= latest_response.feedback %>
          </div>
        </div>
        <div>
          <span class="font-semibold text-gray-700">Área:</span>
          <div class="text-gray-600 text-sm"><%= @avg_feedback_area %></div>
        </div>
        <div>
          <span class="font-semibold text-gray-700">Empresa:</span>
          <div class="text-gray-600 text-sm"><%= @avg_feedback_company %></div>
        </div>
      </div>
    </div>
    <% else %>
    <div class="mb-6 text-center text-gray-400">
      Nenhuma resposta de pesquisa encontrada para este colaborador.
    </div>
    <% end %>
    <div class="flex justify-center mt-8">
      <%= link_to 'Voltar à lista', employees_path, class: 'btn btn-outline
      btn-secondary' %>
    </div>
  </div>
</div>
